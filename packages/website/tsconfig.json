{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "es6", "esnext.intl", "es2017.intl", "es2018.intl"],
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "moduleDetection": "force",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "incremental": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "typeRoots": ["./node_modules/@types"],
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "./utils"],
  "exclude": ["node_modules", "**/*.config.ts", "**/*.config.js"]
}
